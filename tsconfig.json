{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "lib": ["es7"],
    "baseUrl": ".",
    "composite": true,
  },
  "include": ["packages/**/*", "tests/**/*"],
  "extends": "./tsconfig.paths.json",
  "exclude": ["node_modules", "**/*.spec.ts"]
}